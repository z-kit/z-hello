{
  "name": "z-hello",
  "version": "1.0.0",
  "description": "z-kit component template",
  "main": "dist/index.js",
  "minified:main": "dist/index.min.js",
  "jsnext:main": "dist/module.js",
  "module": "dist/module.js",
  "scripts": {
    "lint": "eslint webpack.config.babel.js .storybook src stories test/regression test/unit/suite && stylelint src/style.css",
    "test": "npm run lint && npm run unit-test && npm run regression-test",
    "kill": "fkill node",
    "clean": "rimraf dist",
    "unit-test": "webpack --config test/unit/webpack.config.babel.js && ava test/unit/testBundle.js",
    "regression-test": "node test/regression/server.js && ava test/regression/suite",
    "regression-test-kill": "npm run regression-test && npm run kill",
    "build-module": "mkdirp dist && babel --source-maps -o dist/module.js src/component.js",
    "package": "webpack",
    "min-package": "cross-env MIN=true webpack -p",
    "build": "npm run package && npm run min-package && npm run build-module",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 6006",
    "prepublish": "npm run build"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "ignore": [
      "src/webcomponent"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "airbnb"
    ],
    "rules": {
      "new-cap": "off",
      "import/no-extraneous-dependencies": "off",
      "react/prop-types": "off",
      "react/jsx-filename-extension": "off",
      "global-require": "off"
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": ".storybook/webpack.config.js"
        }
      }
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": "last 2 versions"
      },
      "cssnano": {
        "discardUnused": false
      }
    }
  },
  "greenkeeper": {
    "ignore": [
      "eslint-config-airbnb",
      "eslint-plugin-import",
      "eslint-plugin-jsx-a11y"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-selector-bem-pattern"
    ],
    "rules": {
      "comment-whitespace-inside": null,
      "plugin/selector-bem-pattern": {
        "componentName": "[A-Z]+",
        "componentSelectors": {
          "initial": "^\\.{componentName}(?:-[a-z]+)?$",
          "combined": "^\\.combined-{componentName}-[a-z]+$"
        },
        "utilitySelectors": "^\\.util-[a-z]+$"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/z-kit/z-hello.git"
  },
  "keywords": [
    "z-kit",
    "component",
    "browser",
    "hello",
    "template"
  ],
  "author": "Matheus Kautzmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/z-kit/z-hello/issues"
  },
  "homepage": "https://github.com/z-kit/z-hello",
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "ava": "^0.19.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.18.0",
    "cross-env": "^4.0.0",
    "cross-spawn": "^5.0.1",
    "css-loader": "^0.28.0",
    "eslint": "^3.8.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "^0.11.1",
    "fkill-cli": "^3.3.0",
    "handlebars": "^4.0.6",
    "handlebars-loader": "^1.4.0",
    "html-webpack-plugin": "^2.24.1",
    "jsx-test-helpers": "^1.1.0",
    "mkdirp": "^0.5.1",
    "nightmare": "^2.9.1",
    "null-loader": "^0.1.1",
    "postcss-loader": "^1.2.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "rimraf": "^2.5.4",
    "style-loader": "^0.16.1",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-selector-bem-pattern": "^1.0.0",
    "webpack": "^2.2.1",
    "webpack-node-externals": "^1.5.4"
  }
}
